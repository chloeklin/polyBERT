{
      "fp16": {
      "enabled": true
      },
      
     "zero_optimization": {
      "stage": 2,
      "offload_optimizer": {
          "device": "cpu",
          "pin_memory": true
          },
      "allgather_partitions": true,
      "allgather_bucket_size": 5e8,
      "overlap_comm": true,
      "reduce_scatter": true,
      "reduce_bucket_size": 5e8,
      "contiguous_gradients": true,
      "round_robin_gradients": true
      },  

      "optimizer": {
        "type": "Adam",
        "params": {
        "lr": 0.00005  
        }
    },

      "flops_profiler": {
        "enabled": true,
        "profile_step": 1,
        "module_depth": -1,
        "top_modules": 1,
        "detailed": true,
        "output_file": null
    }
  }